{
  "expo": {
    "name": "Parks Adventure Mobile",
    "slug": "parks-adventure-mobile",
    "version": "0.0.1",
    "platforms": ["ios", "android"],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#405480"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "ca.bcparks.parks-adventure-mobile",
      "buildNumber": "0.0.1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses the users location to filter their results based on proximity.",
      }
    },
    "android": {
      "package": "ca.bcparks.parks_adventure_mobile",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "versionCode": 1
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#294071",
      "translucent": false
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    }
  }
}
